<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:App.Connection.ViewModels"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="50"
             x:Class="App.Connection.Views.ConnectionControl"
             x:DataType="viewModels:ConnectionControlViewModel">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Border Width="20" 
                    Height="20"
                    Background="{Binding MarketColor}" 
                    BorderThickness="0"
                    CornerRadius="10"
                    Margin="2" />
            <TextBlock>Market</TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Border Width="20" 
                    Height="20"
                    Background="{Binding UserColor}" 
                    BorderThickness="0"
                    CornerRadius="10"
                    Margin="2" />
            <TextBlock>User</TextBlock>
        </StackPanel>
    </StackPanel>
</UserControl>