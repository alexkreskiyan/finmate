<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:App.Trading.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="App.Trading.Views.TradingPanel">
    <TabControl BorderBrush="Gray" BorderThickness="2">
        <TabItem Header="Limit">
            <views:LimitOrderPanel />
        </TabItem>
        <TabItem Header="Market">
            <views:MarketOrderPanel />
        </TabItem>
        <TabItem Header="Level Limit">
            <views:LevelLimitOrderPanel />
        </TabItem>
        <TabItem Header="Level Market">
            <views:LevelMarketOrderPanel />
        </TabItem>
    </TabControl>
</UserControl>